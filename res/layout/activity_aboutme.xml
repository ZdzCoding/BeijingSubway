<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >
    
    <TextView 
        android:id="@+id/tv_about"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="我是开发者DreamSunny，如果您认为此款APP不错，不妨小额资助我一下，仅需1元。"
        android:textSize="18sp"/>
    
    <View 
        android:id="@+id/view_line_head"
        android:layout_below="@id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#51AB72"/>
    
    <ImageView 
        android:id="@+id/iv_alipay"
        android:layout_below="@id/view_line_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_pay_alipay"/>
    
    <TextView 
        android:layout_below="@id/view_line_head"
        android:layout_toRightOf="@id/iv_alipay"
        android:layout_toEndOf="@id/iv_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="打开支付宝App，\n扫一扫二维码，\n就可以向我付款哦！"
        android:textSize="16sp"/>
    
    <ImageView 
        android:id="@+id/iv_wechat"
        android:layout_below="@id/iv_alipay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_pay_wechat"/>
    
    <TextView 
        android:layout_below="@id/iv_alipay"
        android:layout_toRightOf="@id/iv_wechat"
        android:layout_toEndOf="@id/iv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="打开微信App，\n点击发现，点击扫一扫，\n扫描二维码就可以向我付款哦！"
        android:textSize="16sp"/>
    
    <View 
        android:layout_below="@id/iv_wechat"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#51AB72"/>

</RelativeLayout>
